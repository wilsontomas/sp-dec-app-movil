<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment"
    android:background="@drawable/registerfondo"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/registroimg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/registro1" />

            <TextView
                android:id="@+id/registertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registerTitle"
                android:textSize="30sp"
                android:layout_margin="30dp"
                android:gravity="center"
                android:textColor="@color/white"

                />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/correo"
                android:inputType="textPersonName"
                android:layout_margin="20dp"
                android:autofillHints="username"
                android:background="@drawable/input_design"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/nombre"
                android:layout_margin="20dp"
                android:autofillHints="name"
                android:background="@drawable/input_design"
                android:textAlignment="center"
                />

            <EditText
                android:id="@+id/apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/apellido"
                android:background="@drawable/input_design"
                android:textAlignment="center"
                android:layout_margin="20dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRadioBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sexo"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:layout_margin="20dp"
                    android:textSize="20sp"
                    />

                <RadioButton android:id="@+id/hombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/radioMale"
                    android:checked="true"
                    />
                <RadioButton android:id="@+id/mujer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/radioFemale"
                    />
            </RadioGroup>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="20dp"
                android:inputType="textPassword"
                android:background="@drawable/input_design"
                android:textAlignment="center"
                android:hint="@string/registerPassword" />

            <EditText
                android:id="@+id/passwordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="20dp"
                android:inputType="textPassword"
                android:background="@drawable/input_design"
                android:textAlignment="center"
                android:hint="@string/registerPasswordConfirm" />

            <Button
                android:id="@+id/CrearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/action_btn"
                android:textColor="@color/white"
                android:text="@string/registerBtnAction" />

            <Button
                android:id="@+id/backRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_btn"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:text="@string/backBtn" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>